<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.test.diary.MainController">
    <TableView fx:id="taskTable">
        <columns>
            <TableColumn fx:id="titleColumn" text="Название"/>
            <TableColumn fx:id="descriptionColumn" text="Описание"/>
            <TableColumn fx:id="dueDateColumn" text="Дата"/>
        </columns>
    </TableView>
    <HBox spacing="10">
        <Button fx:id="addTaskButton" text="Добавить задачу"/>
        <Button fx:id="deleteSelectedTask" text="Удалить задачу"/>
    </HBox>
</VBox>

